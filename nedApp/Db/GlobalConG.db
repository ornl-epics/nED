#
# template file for PVs that are global to an instance of GlobalCon.st. 
#

record(stringin, "$(P)State") {
   field(DESC, "Indication of State")
}

record(stringin, "$(P)PrevReq") {
   field(DESC, "Indication of Request")
}

record(ai, "$(P)NumFound") {
   field(DESC, "Number of devices found")
}

# Global status PVs.
record(bi, "$(P)ReqSucceeded") {
   field(DESC, "Request worked, criterion% devices")
   field(OSV, "NO_ALARM")
   field(ZSV, "MAJOR")
   field(ONAM, "Succeeded")
   field(ZNAM, "Not Really")
}

record(ai, "$(P)PctSucceeded") {
   field(DESC, "% of devices that worked")
   field(PREC, "1")
   field(EGU, "%")
}

record(ao, "$(P)PctCriterion") {
   field(DESC, "% of devices needed for success ")
   field(PREC, "1")
   field(PINI, "YES")
   field(DOL, "100.0")
   field(EGU, "%")
   info(autosaveFields, "VAL")
}

# Busy records for requesting command sequences
record(busy, "$(P)Clear") {
   field(DESC, "Request Clear sequence")
   field(ONAM, "Clearing")
   field(ZNAM, "Clear")
}
record(busy, "$(P)Stop") {
   field(DESC, "Request Stop sequence")
   field(ONAM, "Stoping")
   field(ZNAM, "Stop")
}
record(busy, "$(P)Start") {
   field(DESC, "Request Start sequence")
   field(ONAM, "Starting")
   field(ZNAM, "Start")
}
record(busy, "$(P)Check") {
   field(DESC, "Request Check sequence")
   field(ONAM, "Checking")
   field(ZNAM, "Check")
}
record(busy, "$(P)WriteConf") {
   field(DESC, "Request WriteConf sequence")
   field(ONAM, "Writing")
   field(ZNAM, "WriteConf")
}

